<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="group.zealot.king.core.db.mybatis.system.dao.impl.SysRouteDaoImpl">
    <cache type="group.zealot.king.core.db.mybatis.cache.RedisStringCache" />

    <sql id="field">
        sr.id id,
        sr.create_time createTime,
        sr.create_user_id createUserId,
        sr.last_update_time lastUpdateTime,
        sr.last_update_user_id lastUpdateUserId,
        sr.remark remark,
        sr.name name,
        sr.f_id fId
    </sql>
    <sql id="where">
        <if test="id != null">
            and sr.id = #{id}
        </if>
        <if test="name != null">
            and sr.name = #{name}
        </if>
        <if test="fId != null">
            and sr.f_id = #{fId}
        </if>
    </sql>

    <select id="get" parameterType="SysRoute" resultType="SysRoute">
        select
        <include refid="field"></include>
        from sys_route sr
        <where>
            <include refid="where"></include>
        </where>
    </select>

    <select id="getById" parameterType="long" resultType="SysRoute">
        select
        <include refid="field"></include>
        from sys_route sr
        <where>
            sr.id = #{_parameter}
        </where>
    </select>

    <select id="getList" parameterType="SysRoute" resultType="SysRoute">
        select
        <include refid="field"></include>
        from sys_route sr
        <where>
            <include refid="where"></include>
        </where>
    </select>

    <select id="getListCount" parameterType="SysRoute" resultType="int">
        select
        count(*)
        from sys_route sr
        <where>
            <include refid="where"></include>
        </where>
    </select>

    <insert id="insert" parameterType="SysRoute">
        insert into sys_route sr
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                sr.id,
            </if>
            <if test="name != null">
                sr.name,
            </if>
            <if test="fId != null">
                sr.f_id,
            </if>
            <if test="createTime != null">
                sr.create_time,
            </if>
            <if test="createUserId != null">
                sr.create_user_id,
            </if>
            <if test="remark != null and remark.length() > 0">
                sr.remark,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="fId != null">
                #{fId},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="createUserId != null">
                #{createUserId},
            </if>
            <if test="remark != null and remark.length() > 0">
                #{remark},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="SysRoute">
        update sys_route sr
        <set>
            <if test="name != null">
                sr.name = #{name},
            </if>
            <if test="fId != null">
                sr.f_id = #{fId},
            </if>
            <if test="lastUpdateTime != null">
                sr.last_update_time = #{lastUpdateTime},
            </if>
            <if test="lastUpdateUserId != null">
                sr.last_update_user_id = #{lastUpdateUserId},
            </if>
            <if test="remark != null and remark.length() > 0">
                sr.remark = #{remark},
            </if>
        </set>
        <where>
            sr.id = #{id}
        </where>
    </update>

    <delete id="deleteById" parameterType="long">
        delete from sys_route sr where sr.id = #{_parameter}
    </delete>
</mapper>