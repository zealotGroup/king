<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="group.zealot.king.core.db.mybatis.system.dao.mapper.SysUserDaoMapper">
    <cache type="group.zealot.king.core.db.mybatis.cache.RedisStringCache" />

    <sql id="field">
        su.id id,
        su.create_time createTime,
        su.create_user_id createUserId,
        su.last_update_time lastUpdateTime,
        su.last_update_user_id lastUpdateUserId,
        su.remark remark,
        su.username username,
        su.password password,
        su.level level,
        su.status status,
        su.is_delete isDelete,
        su.last_login_time lastLoginTime
    </sql>
    <sql id="where">
        <if test="id != null">
            and su.id = #{id}
        </if>
        <if test="username != null and username.length() > 0">
            and su.username = #{username}
        </if>
        <if test="password != null and password.length() > 0">
            and su.password = #{password}
        </if>
        <if test="level != null and level.length() > 0">
            and su.level = #{level}
        </if>
        <if test="status != null and status.length() > 0">
            and su.status = #{status}
        </if>
        <if test="isDelete != null">
            and su.is_Delete = #{isDelete}
        </if>
    </sql>

    <select id="get" parameterType="SysUser" resultType="SysUser">
        select
        <include refid="field"></include>
        from sys_user su
        <where>
            <include refid="where"></include>
        </where>
    </select>

    <select id="getById" parameterType="long" resultType="SysUser">
        select
        <include refid="field"></include>
        from sys_user su
        <where>
            su.id = #{_parameter}
        </where>
    </select>

    <select id="getList" parameterType="SysUser" resultType="SysUser">
        select
        <include refid="field"></include>
        from sys_user su
        <where>
            <include refid="where"></include>
        </where>
    </select>

    <select id="getListCount" parameterType="SysUser" resultType="int">
        select
        count(*)
        from sys_user su
        <where>
            <include refid="where"></include>
        </where>
    </select>

    <insert id="insert" parameterType="SysUser">
        insert into sys_user su
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                su.id,
            </if>
            <if test="username != null and username.length() > 0">
                su.username,
            </if>
            <if test="password != null and password.length() > 0">
                su.password,
            </if>
            <if test="level != null and level.length() > 0">
                su.level,
            </if>
            <if test="status != null and status.length() > 0">
                su.status,
            </if>
            <if test="lastLoginTime != null">
                su.last_Login_Time,
            </if>
            <if test="createTime != null">
                su.create_time,
            </if>
            <if test="createUserId != null">
                su.create_user_id,
            </if>
            <if test="remark != null and remark.length() > 0">
                su.remark,
            </if>
            <if test="isDelete != null">
                su.is_Delete,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="username != null and username.length() > 0">
                #{username},
            </if>
            <if test="password != null and password.length() > 0">
                #{password},
            </if>
            <if test="level != null and level.length() > 0">
                #{level},
            </if>
            <if test="status != null and status.length() > 0">
                #{status},
            </if>
            <if test="lastLoginTime != null">
                #{lastLoginTime},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="createUserId != null">
                #{createUserId},
            </if>
            <if test="remark != null and remark.length() > 0">
                #{remark},
            </if>
            <if test="isDelete != null">
                #{isDelete},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="SysUser">
        update sys_user su
        <set>
            <if test="password != null and password.length() > 0">
                su.password = #{password},
            </if>
            <if test="level != null and level.length() > 0">
                su.level = #{level},
            </if>
            <if test="status != null and status.length() > 0">
                su.status = #{status},
            </if>
            <if test="lastLoginTime != null">
                su.last_Login_Time = #{lastLoginTime},
            </if>
            <if test="lastUpdateTime != null">
                su.last_update_time = #{lastUpdateTime},
            </if>
            <if test="lastUpdateUserId != null">
                su.last_update_user_id = #{lastUpdateUserId},
            </if>
            <if test="remark != null and remark.length() > 0">
                su.remark = #{remark},
            </if>
            <if test="isDelete != null">
                su.is_Delete = #{isDelete},
            </if>
        </set>
        <where>
            su.id = #{id}
        </where>
    </update>

    <delete id="deleteById" parameterType="long">
        delete from sys_user sa where su.id = #{_parameter}
    </delete>
</mapper>