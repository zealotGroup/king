<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="group.zealot.king.core.db.mybatis.system.SysRoleRouteDaoMapper">
    <!--废弃    <cache type="group.zealot.king.core.db.mybatis.core.cache.RedisStringCache"/>-->

    <sql id="field">
        srr.id id,
        srr.create_time createTime,
        srr.create_user_id createUserId,
        srr.last_update_time lastUpdateTime,
        srr.last_update_user_id lastUpdateUserId,
        srr.remark remark,
        srr.name name
    </sql>
    <sql id="where">
        <if test="id != null">
            and srr.id = #{id}
        </if>
        <if test="name != null">
            and srr.name = #{name}
        </if>
    </sql>

    <select id="get" parameterType="SysRoleRoute" resultType="SysRoleRoute">
        select
        <include refid="field"></include>
        from sys_role_route srr
        <where>
            <include refid="where"></include>
        </where>
    </select>

    <select id="getById" parameterType="long" resultType="SysRoleRoute">
        select
        <include refid="field"></include>
        from sys_role_route srr
        <where>
            srr.id = #{_parameter}
        </where>
    </select>

    <select id="getList" parameterType="SysRoleRoute" resultType="SysRoleRoute">
        select
        <include refid="field"></include>
        from sys_role_route srr
        <where>
            <include refid="where"></include>
        </where>
    </select>

    <select id="getListCount" parameterType="SysRoleRoute" resultType="int">
        select
        count(*)
        from sys_role_route srr
        <where>
            <include refid="where"></include>
        </where>
    </select>

    <insert id="insert" parameterType="SysRoleRoute">
        insert into sys_role_route srr
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                srr.id,
            </if>
            <if test="name != null">
                srr.name,
            </if>
            <if test="createTime != null">
                srr.create_time,
            </if>
            <if test="createUserId != null">
                srr.create_user_id,
            </if>
            <if test="remark != null and remark.length() > 0">
                srr.remark,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="createUserId != null">
                #{createUserId},
            </if>
            <if test="remark != null and remark.length() > 0">
                #{remark},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="SysRoleRoute">
        update sys_role_route srr
        <set>
            <if test="name != null">
                srr.name = #{name},
            </if>
            <if test="lastUpdateTime != null">
                srr.last_update_time = #{lastUpdateTime},
            </if>
            <if test="lastUpdateUserId != null">
                srr.last_update_user_id = #{lastUpdateUserId},
            </if>
            <if test="remark != null and remark.length() > 0">
                srr.remark = #{remark},
            </if>
        </set>
        <where>
            srr.id = #{id}
        </where>
    </update>

    <delete id="deleteById" parameterType="long">
        delete from sys_role_route srr where srr.id = #{_parameter}
    </delete>
</mapper>